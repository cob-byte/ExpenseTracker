<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground1"
    android:padding="20dp"
    >

        <TextView
            android:id="@+id/addParticipantsFormStaticTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add participant to trip"
            android:textSize="26dp"
            android:textColor="@color/colorTextOnBG1"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addParticipantsFormRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addParticipantsFormStaticTitle"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:background="@color/colorBackground2"
            android:isScrollContainer="true"/>


</RelativeLayout>
