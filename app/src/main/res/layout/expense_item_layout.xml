<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorBackground3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expenseItemDate"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOnBG3"
                android:text="05.06."
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/expenseItemExpenseName"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorTextOnBG3"
                android:text="Burek"
                android:textSize="18dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/expenseItemCost"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOnBG3"
                android:text="14.00"
                android:textAlignment="textEnd"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/expenseItemCurrency"
                android:layout_width="0dp"
                android:layout_weight="0.11"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOnBG3"
                android:text="HRK"
                android:textAlignment="textEnd"
                android:textSize="16dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expenseItemTime"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOnBG3"
                android:text="20:02"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/expenseItemUserName"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorTextOnBG3"
                android:text="Marco Davide PrpiÄ‡"
                android:textAlignment="center"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/expenseItemCategory"
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOnBG3"
                android:text="F&amp;D"
                android:textSize="16dp"
                android:textAlignment="textEnd" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>